.tags-content .list {
  width: 100%;
  padding: 0 32rpx;
  margin-top: 120rpx;
}
.tags-content .list .item {
  margin-top: 30rpx;
  width: 100%;
  background: #FFFFFF;
  border-radius: 8rpx;
}
.tags-content .list .item .title {
  width: 100%;
  height: 80rpx;
  padding: 0 28rpx;
  border-bottom: 1rpx solid  #E5E5E5;
}
.tags-content .list .item .title .review-btn {
  width: 100rpx;
  height: 36rpx;
  text-align: center;
  background: #E7FCF7;
  border-radius: 4rpx 16rpx 4rpx 4rpx;
  border: 1rpx solid #71EFD2;
  font-size: 22rpx;
  font-weight: 400;
  color: #44D7B6;
  line-height: 36rpx;
}
.tags-content .list .item .info {
  width: 100%;
  padding: 24rpx 28rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: #858B9C;
  line-height: 54rpx;
}
.tags-content .list .item .info .value {
  color: #333333;
}
.tags-content .list .item .info .word5 .value {
  color: #15C46B;
}
.tags-content .to-review-btn {
  width: 100rpx;
  height: 36rpx;
  text-align: center;
  background: #EEF3FE;
  border-radius: 4rpx 16rpx 4rpx 4rpx;
  border: 1rpx solid  #9FC0FC;
  font-size: 22rpx;
  font-weight: 400;
  color: #6190E8;
  line-height: 36rpx;
}

