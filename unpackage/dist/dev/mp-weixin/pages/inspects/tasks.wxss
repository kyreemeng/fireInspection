.tasks-content .list {
  width: 100%;
  margin-top: 120rpx;
  padding: 0 32rpx 176rpx 32rpx;
}
.tasks-content .list .item {
  width: 100%;
  margin-top: 54rpx;
  border-radius: 8rpx;
}
.tasks-content .list .item .date {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}
.tasks-content .list .item .title {
  width: 100%;
  height: 80rpx;
  margin-top: 22rpx;
  padding: 0 28rpx;
  background: #FFFFFF;
  border-bottom: 1rpx solid  #E5E5E5;
}
.tasks-content .list .item .info {
  width: 100%;
  padding: 24rpx 28rpx;
  background: #FFFFFF;
  font-size: 28rpx;
  font-weight: 400;
  color: #858B9C;
  line-height: 54rpx;
}
.tasks-content .list .item .info .value {
  color: #333333;
}
.tasks-content .tab1 .item {
  position: relative;
}
.tasks-content .tab1 .item image {
  width: 140rpx;
  height: 140rpx;
  position: absolute;
  left: 50%;
  top: 60%;
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
}
.tasks-content .bottom {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 174rpx;
  z-index: 999;
  padding: 20rpx 30rpx;
  background: #fff;
  box-shadow: 0 -5rpx 9rpx 0 #eff3ff;
}
.tasks-content .bottom .btn {
  width: 100%;
  height: 100rpx;
  text-align: center;
  background: #4B87FC;
  border-radius: 8rpx;
  font-size: 36rpx;
  font-weight: 500;
  color: #FFFFFF;
  line-height: 100rpx;
}

