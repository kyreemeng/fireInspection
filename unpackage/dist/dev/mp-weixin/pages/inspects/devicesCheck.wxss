.content {
  padding-bottom: 176rpx;
}
.content .point_name {
  margin-top: 56rpx;
}
.content .point_name .box {
  margin-top: 24rpx;
}
.content .point_name .box .top {
  width: 100%;
  height: 80rpx;
  padding: 0 28rpx;
  background: linear-gradient(180deg, #DEE5FF 0%, rgba(226, 233, 255, 0.2) 100%);
  border-radius: 8rpx 8rpx 0px 0px;
  border-bottom: 1rpx solid #E5E5E5;
}
.content .point_name .box .top .name {
  font-size: 32rpx;
  font-weight: 500;
  color: #354052;
  line-height: 80rpx;
}
.content .point_name .box .bottom {
  width: 100%;
  padding: 24rpx 28rpx;
  background: #FFFFFF;
  border-radius: 0 0 8rpx 8rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: #858B9C;
  line-height: 40rpx;
}
.content .point_name .box .bottom .value {
  color: #333333;
}
.content .info {
  margin-top: 56rpx;
}
.content .title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}
.content .list {
  margin-top: 26rpx;
  width: 100%;
  border-radius: 8rpx;
  background: #FFFFFF;
}
.content .list .item {
  width: 100%;
  padding: 34rpx 28rpx;
  border-bottom: 1rpx solid #E5E5E5;
  font-size: 28rpx;
  font-weight: 400;
  color: #666666;
}
.content .list .item .right-btn {
  width: 250rpx;
}
.content .list .item .right-btn .normal,
.content .list .item .right-btn .abnormal {
  text-align: center;
  width: 110rpx;
  height: 54rpx;
  background: #FFFFFF;
  border-radius: 8rpx;
  border: 2rpx solid #6190E8;
  font-size: 28rpx;
  font-weight: 400;
  color: #6190E8;
  line-height: 54rpx;
}
.content .bottom-btn {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 174rpx;
  z-index: 999;
  padding: 20rpx 30rpx;
  background: #fff;
  box-shadow: 0 -5rpx 9rpx 0 #eff3ff;
}
.content .bottom-btn .fix-btn {
  width: 200rpx;
  height: 100rpx;
  text-align: center;
  background: #EAF2FE;
  border-radius: 8rpx;
  border: 1rpx solid #4B87FC;
  font-size: 36rpx;
  font-weight: 500;
  color: #4B87FC;
  line-height: 100rpx;
}
.content .bottom-btn .normal-btn {
  width: 460rpx;
  height: 100rpx;
  text-align: center;
  background: #4B87FC;
  border-radius: 8rpx;
  font-size: 36rpx;
  font-weight: 500;
  color: #FFFFFF;
  line-height: 100rpx;
}

