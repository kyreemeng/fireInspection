.content .info {
  width: 100%;
  height: 240rpx;
  margin-top: 54rpx;
  background: #FFFFFF;
  border-radius: 8rpx;
  padding: 26rpx 26rpx 66rpx 32rpx;
}
.content .info .msg {
  width: 39rpx;
  height: 44rpx;
  margin-left: 592rpx;
}
.content .info .avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 1rpx solid #E5E5E5;
}
.content .info .word {
  margin-left: 20rpx;
  height: 120rpx;
}
.content .info .word .name .value {
  font-size: 36rpx;
  font-weight: 500;
  color: #333333;
  line-height: 50rpx;
}
.content .info .word .name .line {
  margin-left: 15rpx;
}
.content .info .word .name .tag {
  width: 110rpx;
  height: 36rpx;
  text-align: center;
  margin-left: 15rpx;
  background: #DFEDFF;
  border-radius: 18rpx;
  font-size: 24rpx;
  font-weight: 500;
  color: #37A1FA;
  line-height: 36rpx;
}
.content .info .word .tel {
  font-size: 26rpx;
  font-weight: 500;
  color: #333333;
  line-height: 37rpx;
  margin-top: 16rpx;
}
.content .process {
  width: 100%;
  margin-top: 54rpx;
}
.content .process .title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  line-height: 45rpx;
}
.content .process .box-area {
  margin-top: 24rpx;
  width: 100%;
}
.content .process .box-area .item1 .box, .content .process .box-area .item2 .box {
  width: 325rpx;
  height: 287rpx;
  background: #FFFFFF;
  border-radius: 8rpx;
  padding: 88rpx 0rpx 20rpx 0rpx;
  text-align: center;
}
.content .process .box-area .item1 .box .num, .content .process .box-area .item2 .box .num {
  font-size: 44rpx;
  font-family: DINAlternate-Bold, DINAlternate;
  font-weight: bold;
  line-height: 51rpx;
}
.content .process .box-area .item1 .box .desc, .content .process .box-area .item2 .box .desc {
  margin-top: 82rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  line-height: 45rpx;
}
.content .process .box-area .item2 {
  margin-top: 40rpx;
}

